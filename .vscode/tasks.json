{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "TypeScript Build",
            "command": "npx",
            "args": [
                "tsc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/node"
            },
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Python Check Types",
            "command": "mypy",
            "args": [
                "${workspaceFolder}/py"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Markdown to HTML",
            "command": "config/markdown.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Build Everything in Parallel",
            "dependsOn": [
                "TypeScript Build",
                "Python Check Types",
                "Markdown to HTML"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Relocate Everything in Parallel",
            "dependsOn": [
                
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Do Everything",
            "dependsOn": [
                "Build Everything in Parallel",
                "Relocate Everything in Parallel"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}