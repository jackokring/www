{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Type Check and Build",
            "command": "check-src.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Build Python PyPI Distribution",
            "command": "build-module.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Install Server SSL (Once Only)",
            "command": "certbot-once.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Launch Flask",
            "command": "flask-up.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build"
            }
        }
    ]
}