{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "TypeScript Build",
            "command": "npx",
            "args": [
                "tsc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/node"
            },
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Python Check Types",
            "command": "mypy",
            "args": [
                "${workspaceFolder}/py"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Markdown to HTML",
            "command": "config/markdown.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Client Build",
            "command": "gulp",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/client"
            }
        },
        {
            "label": "Server Build",
            "command": "gulp",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/server"
            }
        },
        {
            "label": "Build",
            "dependsOn": [
                "Client Build",
                "Server Build"
            ]
        }
    ]
}